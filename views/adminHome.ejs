            function appendRow(el) {
              var table = el.closest('.table-wrap').find('table');
              var input = el.closest('.table-wrap').find('.table-inputs');
              if (input.val() != '') {
                table.find('tbody').append('<tr class="' + input.val() + '"><td class="col-8">' + input.val() +
