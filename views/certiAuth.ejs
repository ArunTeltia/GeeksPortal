                <h4 class="heading">Certificate Verification</h4>

            </div>

            <div class="col-12 d-flex justify-content-center ">
                <div class="card w-75 ">
                    <% if(message){ %>
                    <div style="text-align:center;" role="alert" class="alert  alert-<%=message.type%>">
                        <strong><%= message.intro %> </strong><%= message.message %>
                    </div>
                    <% } %>
                    <div class="card-body ">
                        <div class="row">
                            <div class="col-12">
                                <form action="/verify_certificate" method="POST">
                                    <div class="form-group">
                                        <input type="text" name="certiNum" value="<%=input%>" class="form-control">
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-block">VERIFY</button>
                                </form>
                            </div>
                            <div class="col-12 mt-3">
                                <% if(details.length!==0){ %>
                                <h6 class="text-success">Certificate number is valid </h6>
                                <div class="row" style="color: #999595;">
                                    <div class="col-6">
                                        <h6>Name</h6>
                                    </div>
                                    <div class="col-6">
                                        <h6><%= details.Name %> </h6>
                                    </div>
                                </div>
                                <div class="row" style="color: #999595;">
                                    <div class="col-6">
                                        <h6>Role</h6>
                                    </div>
                                    <div class="col-6">
                                        <h6><%= details.Role %> </h6>
                                    </div>
                                </div>
                                <div class="row" style="color: #999595;">
                                    <div class="col-6">
                                        <h6>Institute</h6>
                                    </div>
                                    <div class="col-6">
                                        <h6><%= details.InstituteName %> </h6>
                                    </div>
                                </div>
                                <div class="row" style="color: #999595;">
                                    <div class="col-6">
                                        <h6>Date of certification</h6>
                                    </div>
                                    <div class="col-6">
                                        <h6 id="date"></h6>
                                        <script>
                                            var date = Date.parse("<%= details.EndDate %>");
                                            var d = new Date(date);
                                            document.querySelector("#date").textContent = d.getDate() + '-' + (d.getMonth() + 1) + '-' + d.getFullYear();
                                        </script>
                                    </div>
                                </div>
                                <%  } %>
                            </div>
                        </div>

                    </div>
                </div>
